From 65f3f507c80db5377500f5078a0081fe7f901d63 Mon Sep 17 00:00:00 2001
From: Luke Usher <luke.usher@outlook.com>
Date: Thu, 19 Aug 2021 19:32:40 +0100
Subject: [PATCH] ruby: shuffle order of optimal drivers

PulseAudio seems to perform better than ALSA when available.
---
 ruby/audio/audio.cpp | 12 ++++++------
 1 file changed, 6 insertions(+), 6 deletions(-)

diff --git a/ruby/audio/audio.cpp b/ruby/audio/audio.cpp
index 50da792ee..ec353a48a 100644
--- a/ruby/audio/audio.cpp
+++ b/ruby/audio/audio.cpp
@@ -252,18 +252,18 @@ auto Audio::optimalDriver() -> string {
   return "DirectSound 7.0";
   #elif defined(AUDIO_WAVEOUT)
   return "waveOut";
-  #elif defined(AUDIO_ALSA)
-  return "ALSA";
-  #elif defined(AUDIO_OSS)
-  return "OSS";
-  #elif defined(AUDIO_OPENAL)
-  return "OpenAL";
   #elif defined(AUDIO_PULSEAUDIO)
   return "PulseAudio";
   #elif defined(AUDIO_PULSEAUDIOSIMPLE)
   return "PulseAudio Simple";
+  #elif defined(AUDIO_OPENAL)
+  return "OpenAL";
   #elif defined(AUDIO_AO)
   return "libao";
+  #elif defined(AUDIO_ALSA)
+  return "ALSA";
+  #elif defined(AUDIO_OSS)
+  return "OSS";
   #else
   return "None";
   #endif
